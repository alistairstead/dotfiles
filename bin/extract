#!/bin/bash

set -e

NAME=$1
if [[ -z "${NAME}" ]]; then
  echo "Please specify a file to be extracted"
  exit
fi

if [ -f ${NAME} ] ; then
  case ${NAME} in
      *.tar.bz2) tar xvjf $1 ;;
      *.tar.gz) tar xvzf $1 ;;
      *.bz2) bunzip2 $1 ;;
      *.rar) rar x $1 ;;
      *.gz) gunzip $1 ;;
      *.tar) tar xvf $1 ;;
      *.tbz2) tar xvjf $1 ;;
      *.tgz) tar xvzf $1 ;;
      *.zip) unzip $1 ;;
      *.Z) uncompress $1 ;;
      *.7z) 7z x $1 ;;
      *) echo "don't know how to extract ${NAME}" ;;
  esac
else
  echo "'$1â€² You need to specify a file. Dumb Ass!"
fi
