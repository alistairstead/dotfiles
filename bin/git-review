#!/bin/bash

set -e

if [[ $1 == -v ]]; then
    verbose=1
    shift
fi

author=$1
dateString=$2
if [[ $3 == --confirm ]]; then
    confirm=1
fi

main() {
  enforce_usage
  run_review
}

run_review() {
  if [ -n "$dateString" ]; then
    since="--since '${dateString}'"
  fi
  if [ -n "$confirm" ]; then
    confirm="-p"
  fi
  log_command git shortlog -n -s --no-merges $since
  log_command git log --no-merges --author="'${author}'" --oneline $since | cut -d' ' -f 1 | xargs -t $confirm -n1 git show
}

enforce_usage() {
    if [ -z "$author" ]; then
        usage
        exit $E_BADARGS
    fi
}

usage() {
    echo "usage: `basename $0` author [since] [--confirm]"
}

log_command() {
    debug "=> $@"
    eval $@
}

debug() {
  if [ $verbose ]; then
    echo $@ >&2
  fi
}

main
