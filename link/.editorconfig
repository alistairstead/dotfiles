; EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.elm]
indent_size = 4

[*.{php,xml,phtml}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style=tab
