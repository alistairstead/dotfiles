####### Shortcut Hotkeys #############
# open terminal
alt - t : open -n /Applications/Kitty.app

####### Application Blacklists #############
# .blacklist [
# ]


####### Window Management Hotkeys #############
# change focus
alt - h : yabai -m window --focus west || yabai -m display --focus west
alt - j : yabai -m window --focus south || yabai -m display --focus south
alt - k : yabai -m window --focus north || yabai -m display --focus north
alt - l : yabai -m window --focus east || yabai -m display --focus east

# Moving windows between spaces: alt + ctrl - {1, 2, 3, 4, p, n } (Assumes 4 Spaces Max per Display)
alt + ctrl - 1 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[1] ]] \
                  && yabai -m window --space $SPACES[1] \
                  && sketchybar --trigger windows_on_spaces
alt + ctrl - 2 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[2] ]] \
                  && yabai -m window --space $SPACES[2] \
                  && sketchybar --trigger windows_on_spaces
alt + ctrl - 3 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[3] ]] \
                  && yabai -m window --space $SPACES[3] \
                  && sketchybar --trigger windows_on_spaces
alt + ctrl - 4 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[4] ]] \
                  && yabai -m window --space $SPACES[4] \
                  && sketchybar --trigger windows_on_spaces
alt + ctrl - 5 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[5] ]] \
                  && yabai -m window --space $SPACES[5] \
                  && sketchybar --trigger windows_on_spaces
alt + ctrl - 6 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[6] ]] \
                  && yabai -m window --space $SPACES[6] \
                  && sketchybar --trigger windows_on_spaces
alt + ctrl - 7 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[7] ]] \
                  && yabai -m window --space $SPACES[7] \
                  && sketchybar --trigger windows_on_spaces
alt + ctrl - 8 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[8] ]] \
                  && yabai -m window --space $SPACES[8] \
                  && sketchybar --trigger windows_on_spaces
alt + ctrl - 9 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[9] ]] \
                  && yabai -m window --space $SPACES[9] \
                  && sketchybar --trigger windows_on_spaces
alt + ctrl - 0 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[10] ]] \
                  && yabai -m window --space $SPACES[10] \
                  && sketchybar --trigger windows_on_spaces

alt + ctrl - p : yabai -m window --space prev && yabai -m space --focus prev && sketchybar --trigger windows_on_spaces
alt + ctrl - n : yabai -m window --space next && yabai -m space --focus next && sketchybar --trigger windows_on_spaces

## Window Movement (alt + ctrl - ...)
# Moving windows in spaces: alt + ctrl - {j, k, l, h}
alt + ctrl - h : yabai -m window --warp west || $(yabai -m window --display west && sketchybar --trigger windows_on_spaces && yabai -m display --focus west && yabai -m window --warp last) || yabai -m window --move rel:-10:0
alt + ctrl - j : yabai -m window --warp south || $(yabai -m window --display south && sketchybar --trigger windows_on_spaces && yabai -m display --focus south) || yabai -m window --move rel:0:10
alt + ctrl - k : yabai -m window --warp north || $(yabai -m window --display north && sketchybar --trigger windows_on_spaces && yabai -m display --focus north) || yabai -m window --move rel:0:-10
alt + ctrl - l : yabai -m window --warp east || $(yabai -m window --display east && sketchybar --trigger windows_on_spaces && yabai -m display --focus east && yabai -m window --warp first) || yabai -m window --move rel:10:0

# shift window in current workspace
alt + shift - h : yabai -m window --swap west || yabai -m window --display west; yabai -m display --focus west
alt + shift - j : yabai -m window --swap south || yabai -m window --display south; yabai -m display --focus south
alt + shift - k : yabai -m window --swap north || yabai -m window --display north; yabai -m display --focus north
alt + shift - l : yabai -m window --swap east || yabai -m window --display east; yabai -m display --focus east

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# Float / Unfloat window: lalt - space
alt - space : yabai -m window --toggle float; sketchybar --trigger window_focus

# Make window zoom to fullscreen: shift + lalt - f
alt + shift - f : yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus


# Toggle sketchybar
alt + shift - space : sketchybar --bar hidden=toggle
alt - r : sketchybar --remove '/.*/' && sh -c 'export CONFIG_DIR=$HOME/.config/sketchybar && $CONFIG_DIR/sketchybarrc'

